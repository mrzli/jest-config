{
  "name": "@gmjs/jest-config",
  "version": "0.0.7",
  "description": "Jest configuration.",
  "author": {
    "name": "Goran MrÅ¾ljak",
    "email": "goran.mrzljak@gmail.com",
    "url": "https://mrzli.com"
  },
  "license": "MIT",
  "keywords": [
    "jest",
    "ts-jest",
    "testing",
    "test",
    "test-config",
    "jest-config"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mrzli/jest-config"
  },
  "homepage": "https://github.com/mrzli/jest-config",
  "main": "src/index.js",
  "scripts": {
    "start:dev": "ts-node src/index.ts",
    "lint": "eslint --report-unused-disable-directives --fix . && prettier --write .",
    "lint:nofix": "eslint --report-unused-disable-directives . && prettier --check .",
    "test-only": "jest --passWithNoTests",
    "test": "pnpm run lint && pnpm run test-only",
    "clean": "shx rm -rf ./dist",
    "build-only": "pnpm run clean && tsc --project tsconfig.lib.json",
    "build": "pnpm run test && pnpm run build-only",
    "pac-only": "npmpub pack",
    "pac": "pnpm run build && pnpm run pac-only",
    "pub-only": "npmpub pub",
    "pub": "pnpm run pac && pnpm run pub-only"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@gmjs/eslint-config": "^0.0.27",
    "@gmjs/npm-publish-cli": "^0.0.9",
    "@gmjs/prettier-config": "^1.0.45",
    "@gmjs/tsconfig": "^1.0.9",
    "@jest/globals": "^29.7.0",
    "@types/eslint": "^8.44.7",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-unicorn": "^49.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "prettier": "@gmjs/prettier-config"
}
